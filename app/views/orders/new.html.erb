<%= form_for @order do |f| %>

  <%= f.fields_for :item do |item| %>
    <%= item.label :name, "Order" %>
    <%= item.text_field :name %>

    <%= item.label :specs %>
    <%= item.text_field :specs %>

    <%= item.label :price, "Price" %>
    <%= item.text_field :price %>
  <% end %>

  <%= f.fields_for :customer do |customer| %>
    <%= customer.label :name %>
    <%= customer.text_field :name %>
  <% end %>

  <%= f.submit "Place" %>
<% end %>
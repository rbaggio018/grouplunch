<%= form_for @order do |f| %>

  <%= f.fields_for :item, @order.item do |item| %>
    <%= item.label :name, "Order" %>
    <%= item.text_field :name, readonly: readonly %>

    <%= item.label :specs %>
    <%= item.text_field :specs, readonly: readonly %>

    <%= item.label :price, "Price" %>
    <%= item.text_field :price, readonly:readonly %>
  <% end %>

  <%= f.submit "Place" if !readonly %>
<% end %>